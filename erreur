# Étape 1 : Builder
FROM ubuntu:22.04 AS builder

RUN apt-get update && apt-get install -y \
    build-essential \
    libreadline-dev \
    git \
    fuse3 \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app
COPY . .

RUN make clean && make

# Étape 2 : Image finale
FROM ubuntu:22.04

# Installer les dépendances runtime
RUN apt-get update && apt-get install -y \
    libreadline8 \
    sudo \
    fdisk \
    util-linux \
    fuse3 \
    && rm -rf /var/lib/apt/lists/*

# Copier le binaire kubsh depuis le builder
COPY --from=builder /app/kubsh /usr/local/bin/kubsh

# Créer un utilisateur pour tester
RUN useradd -m -s /bin/bash testuser

# Définir les variables d'environnement classiques
ENV HOME=/root
ENV USER=root
ENV SHELL=/bin/bash
ENV PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin

WORKDIR /root

# Lancer le shell kubsh
CMD ["kubsh"]
